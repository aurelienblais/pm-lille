.login-box
  .login-logo
    %a
      %b> PM
      Lille
  .card
    .card-body.login-card-body
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .input-group.mb-3
          = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'E-mail'
          .input-group-append
            .input-group-text
              %span.fas.fa-envelope
        .input-group.mb-3
          = f.password_field :password, class: 'form-control', placeholder: 'Mot de passe'
          .input-group-append
            .input-group-text
              %span.fas.fa-lock
        .row
          .col-12
            .icheck-primary
              = f.check_box :remember_me
              = f.label :remember_me, 'Se souvenir de moi'
          .col-6
            = link_to new_registration_path(resource_name), class: 'btn btn-default btn-block' do
              Inscription
          .col-6
            = f.submit 'Connexion', class: 'btn btn-primary btn-block'

:javascript
  if (#{params[:notice] ? 'true' : 'false'}) {
    $(document).Toasts('create', {
      title: 'Information',
      body: '#{params[:notice]}',
      class: 'bg-success'
    });
  }