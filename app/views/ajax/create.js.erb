<% if item.persisted? %>
  $('#new-modal').modal('hide');
  $(document).Toasts('create', {
      title: '<%= controller_name.singularize.capitalize %> crée avec succès',
      autohide: true,
      delay: 2500,
      class: 'bg-success'
  });
  $('#items-table tbody').append('<%= escape_javascript render item %>');
<% else %>
  $(document).Toasts('create', {
      title: 'Une erreur est survenue',
      body: '<%= item.errors.full_messages.join(', ') %>',
      autohide: true,
      delay: 2500,
      class: 'bg-danger'
  });
<% end %>