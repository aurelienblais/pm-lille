<% unless item.persisted? %>
  $(document).Toasts('create', {
      title: '<%= controller_name.singularize.capitalize %> supprimé avec succès',
      autohide: true,
      delay: 2500,
      class: 'bg-success'
  });
  $('[data-item-id="<%= item.id %>"]').remove();
<% else %>
  $(document).Toasts('create', {
      title: 'Une erreur est survenue',
      body: '<%= item.errors.full_messages.join(', ') %>',
      autohide: true,
      delay: 2500,
      class: 'bg-danger'
  });
<% end %>