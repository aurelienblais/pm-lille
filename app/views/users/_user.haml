  %tr{ data: { item_id: user.id } }
    %td= user.id
    %td= user.complete_name
    %td= user.role
    %td= user.teams.join(', ')
    %td
      .btn-group
        = link_to edit_user_path(user), remote: true, class: 'btn btn-default btn-sm'do
          %i.fas.fa-edit
      .btn-group
        = link_to reset_password_user_path(user), remote: true, method: :post, class: 'btn btn-danger btn-sm', data: { confirm: 'Voulez-vous vraiment rÃ©initialiser le mot de passe ?' } do
          %i.fas.fa-sync-alt