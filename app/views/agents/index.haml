%section.content-header
%section.content
  .container-fluid
    .row
      .col-12
        .card
          .card-header
            %h3.card-title Agents
            .card-tools
              = link_to new_agent_path, remote: true, class: 'btn btn-sm btn-secondary' do
                Nouvel agent
          .card-body
            %table.table.table-bordered
              %thead
                %tr
                  %th #
                  %th Nom
              %tbody
                - @agents.each do |agent|
                  %tr
                    %td= agent.id
                    %td= agent.complete_name