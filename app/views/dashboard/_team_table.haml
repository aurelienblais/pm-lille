%table.text-center.absences-table.w-100
  %thead
    %tr
      %th.align-middle.agent-name.fit-text= agents.first.team
      - @date_range.each do |date|
        %th
          = date.day
          %br
          = wday_to_s date.wday
  %tbody
    - agents.each do |agent|
      %tr
        %td.text-nowrap.agent-name
          = link_to agent, class: 'fit-text' do
            = "[#{agent.register_number}]"
            = agent.complete_name
        - @date_range.each do |date|
          %td.day{ class: date.wday == 6 ? 'sunday' : nil, data: { date: date, agent: agent.id, toggle: :tooltip } }
            .day-background