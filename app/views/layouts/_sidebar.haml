%aside.main-sidebar.sidebar-dark-primary.elevation-4
  = link_to root_path, class: 'brand-link' do
    = image_tag 'logo.jpg', class: 'brand-image elevation-3'
    %span.brand-text.font-weight-light
      %b PM
      Lille
  .slimScrollDiv{:style => "position: relative; overflow: hidden; width: auto; height: 652px;"}
    .sidebar{:style => "min-height: 652px; overflow: hidden; width: auto; height: 652px;"}
      .user-panel.mt-3.pb-3.mb-3.d-flex
        .info
          %a.d-block
            Bonjour
            %b= current_user.complete_name
      %nav.mt-2
        %ul.nav.nav-sidebar.flex-column
          %li.nav-item
            = link_to root_path, class: 'nav-link' do
              %i.fas.fa-chart-line.nav-icon
              %p Accueil
          %li.nav-item
            = link_to absences_path, class: 'nav-link' do
              %i.far.fa-calendar.nav-icon
              %p Calendrier
          - if policy(Room).index?
            %li.nav-item
              = link_to rooms_path, class: 'nav-link' do
                %i.far.fa-comments.nav-icon
                %p Discussions
          %li.nav-header Administration
          - if policy(Agent).index?
            %li.nav-item
              = link_to agents_path, class: 'nav-link' do
                %i.far.fa-user.nav-icon
                %p Agents
          - if policy(Team).index?
            %li.nav-item
              = link_to teams_path, class: 'nav-link' do
                %i.fas.fa-sitemap.nav-icon
                %p Equipes
          - if policy(Rank).index?
            %li.nav-item
              = link_to ranks_path, class: 'nav-link' do
                %i.fas.fa-medal.nav-icon
                %p Grades
          - if policy(AbsenceType).index?
            %li.nav-item
              = link_to absence_types_path, class: 'nav-link' do
                %i.fas.fa-map-signs.nav-icon
                %p Types d'absences
          - if policy(User).index?
            %li.nav-item
              = link_to users_path, class: 'nav-link' do
                %i.fas.fa-users.nav-icon
                %p Utilisateurs