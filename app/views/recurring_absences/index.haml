%section.content-header
%section.content
  .container-fluid
    .row
      .col-12
        .card
          .card-header
            %h3.card-title Absences récurrentes
            .card-tools
              = link_to new_recurring_absence_path, remote: true, class: 'btn btn-sm btn-secondary' do
                Nouvelle absence récurrente
          .card-body
            %table.table.table-bordered.table-hover.text-center
              %thead
                %tr
                  %th #
                  %th Agent
                  %th Type d'absence
                  %th Date de début
                  %th Date de fin
                  %th
              %tbody#items-table= render items